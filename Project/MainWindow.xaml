<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid x:Name="MainGrid" PreviewMouseDown="MainGrid_PreviewMouseDown" Margin="0">
        <StackPanel x:Name="Options">
            
            <Button HorizontalAlignment="Right" Height="40" Width="150" Margin="0, 25, 0, 0">Set Start Position</Button>
            <Button HorizontalAlignment="Right" Height="40" Width="150" Margin="0, 25, 0, 0">Set Destination Position</Button>
            <Button HorizontalAlignment="Right" Height="40" Width="150" Margin="0, 25, 0, 0">Find Path</Button>
            
        </StackPanel>
    </Grid>
</Window>
